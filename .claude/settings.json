{
    "permissions": {
        "allow": [
            "Read",
            "Edit",
            "Bash(ls *)",
            "Bash(grep *)",
            "Bash(head *)",
            "Bash(cat *)",
            "Bash(git:*)",
            "mcp__context7",
            "mcp__mcp-atlassian__jira_*",
            "WebSearch",
            "WebFetch"
        ],
        "deny": [
            "Bash(curl *)",
            "Bash(wget *)"
        ],
        "defaultMode": "plan"
    },
    "availableModels": [
        "sonnet",
        "opus",
        "opusplan"
    ],
    "respectGitignore": false,
    "alwaysThinkingEnabled": false,
    "promptSuggestionEnabled": false,
    "autoMemoryEnabled": false,
    "hooks": {
        "PreToolUse": [
            {
                "matcher": "Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/claude_log_command.py"
                    }
                ]
            }
        ]
    }
}
